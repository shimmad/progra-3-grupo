<!-- formulario de login d personal de la clinica con vista ejs-->

<%- include('partials/head') -%>
<style>
  .formulario {
    background-color: #f1f1f1;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    margin: 20px auto;
    width: 80%;
    max-width: 400px;
  }

  .formulario h3 {
    text-align: center;
    margin-bottom: 20px;
  }

  .formulario label {
    display: block;
    margin-bottom: 10px;
  }

  .formulario input[type="email"],
  .formulario input[type="password"] {
    width: 90%;
    padding: 10px;
    border-radius: 5px;
    border: none;
    margin-bottom: 20px;
  }

  .formulario button[type="submit"] {
    background-color: #4CAF50;
    color: white;
    padding: 10px 20px;
    border-radius: 5px;
    border: none;
    cursor: pointer;
  }
  h2 {
    text-align: center;
    margin-bottom: 20px;
    
  }
</style>
<body>
  <%- include('partials/header') -%>
  <div class="titulos">
    <h1>Clinica Salud +</h1>
    <h2>Login de personal</h2>
  </div>
  <% if (typeof error !== 'undefined') { %>
    <p style="color: red;"><%= error %></p>
  <% } %>
  <div class="formulario">
    <form action="/login" method="POST">
      <!--cuando la perssona ingres y toca wel botton se manda un post a /login-->
      <h3>Iniciar sesión</h3>
      <label>Email:</label>
      <input type="email" name="email" required /><br/>
      <label>Contraseña:</label>
      <input type="password" name="password" required minlength="8" /><br/>
      <button type="submit">Ingresar</button>
    </form>
  </div>
  <%- include('partials/footer') -%>
</body>
</html>