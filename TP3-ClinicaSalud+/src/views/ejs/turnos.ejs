<%- include('partials/head') -%>
<style>
  body {
    margin: 0;
    font-family: 'Roboto', sans-serif;
    background-image: url('./img/clinica_11.jpg');
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    background-attachment: fixed;
    color: #0e0813;
  }

  main {
    background-color: rgba(255, 255, 255, 0.9);
    margin: 40px auto;
    padding: 30px;
    border-radius: 15px;
    width: 95%;
    max-width: 900px;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
  }

  h2 {
    text-align: center;
    color: #102358;
    margin-bottom: 25px;
    font-weight: bold;
  }

  ul {
    list-style: none;
    padding: 0;
  }

   #turnos li {
    background-color: #f5f5f5;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 15px;
    margin-bottom: 10px;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .acciones {
    display: flex;
    gap: 6px;
    flex-wrap: wrap;
  }

   #turnos button, #turnos a {
    padding: 6px 8px;
    border: none;
    border-radius: 6px;
    font-weight: bold;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }

  button[type="submit"] {
    background-color: #ff7979;
    color: white;
  }

  button[type="submit"]:hover {
    background-color: #e25757;
    cursor: pointer;
  }

  a[href*="editar"] {
    background-color: #71cbd1;
    
  }

  a[href*="editar"]:hover {
    background-color: #4dbdc4;
  }

  .formulario {
    margin-top: 40px;
  }

  .formulario form {
    display: flex;
    flex-direction: column;
    gap: 15px;
    align-items: center;
  }

  .formulario label {
    font-weight: bold;
    width: 100%;
    max-width: 400px;
    display: flex;
    justify-content: space-between;
  }

  .formulario input {
    padding: 10px;
    border-radius: 8px;
    border: 1px solid #ccc;
    width: 60%;
  }

  .formulario button {
    background-color: #4CAF50;
    color: white;
    width: 200px;
  }

  .formulario button:hover {
    background-color: #45a049;
    cursor: pointer;
  }

  @media screen and (max-width: 600px) {
    .formulario label {
      flex-direction: column;
      align-items: flex-start;
    }

    .formulario input {
      width: 100%;
    }

    li {
      font-size: 14px;
    }
  }
</style>
<body>
  <%- include('partials/header') -%>

  <main>
    <section id="turnos">
    <div class="lista">
      <h2>Lista de Turnos</h2>
      <ul>
        <% turnos.forEach(turno => { %>
          <li>
            <span>
              <strong>Fecha:</strong> <%= turno.fecha %> — 
              <strong>Hora:</strong> <%= turno.hora %> — 
              <strong>Paciente:</strong> <%= turno.Paciente?.nombre %> <%= turno.Paciente?.apellido %> — 
              <strong>Medico:</strong> <%= turno.Medico?.nombre %>

              </span>
            <% if (esMedico) { %>
              <div class="acciones">
                <form action="/turnos/<%= turno.id %>?_method=DELETE"" method="POST">
                  <button type="submit">Eliminar</button>
                </form>
                <a href="">Editar</a>
              </div>
            <% } %>
          </li>
        <% }) %>
      </ul>
    </div>

    <% if (esMedico) { %>
      <div class="formulario">
        <h2>Registrar nuevo turno</h2>
        <form id="formTurno" action="/turnos" method="POST">
          <label>Paciente ID: <input type="number" name="pacienteId" required></label>
          <label>Fecha: <input type="text" name="fecha" placeholder="dd/mm/yyyy" required></label>
          <label>Hora: <input type="text" name="hora" placeholder="hh:mm" required></label>
          <button type="submit">Registrar</button>
        </form>
      </div>
    <% } %>
    </section>
  </main>

  <%- include('partials/footer') -%>
</body>
